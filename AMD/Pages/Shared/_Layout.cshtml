    <script>
        // Navbar scroll effect
        $(window).scroll(function() {
            if ($(window).scrollTop() > 50) {
                $('.navbar-main').addClass('scrolled');
            } else {
                $('.navbar-main').removeClass('scrolled');
            }
        });

        // Back to top button
        $(window).scroll(function() {
            if ($(this).scrollTop() > 300) {
                $('#backToTop').css({
                    'opacity': '1',
                    'transform': 'translateY(0)'
                });
            } else {
                $('#backToTop').css({
                    'opacity': '0',
                    'transform': 'translateY(20px)'
                });
            }
        });

        $('#backToTop').click(function() {
            $('html, body').animate({ scrollTop: 0 }, 600);
            return false;
        });

        // Smooth scroll for anchor links
        $(document).on('click', 'a[href^="#"]', function(event) {
            event.preventDefault();
            $('html, body').animate({
                scrollTop: $($.attr(this, 'href')).offset().top - 80
            }, 600);
        });

        // Animate elements on scroll
        $(window).on('scroll', function() {
            $('.animate-on-scroll').each(function() {
                var elementTop = $(this).offset().top;
                var elementBottom = elementTop + $(this).outerHeight();
                var viewportTop = $(window).scrollTop();
                var viewportBottom = viewportTop + $(window).height();

                if (elementBottom > viewportTop && elementTop < viewportBottom) {
                    $(this).addClass('animated');
                }
            });
        });

        // Initialize animations
        $(document).ready(function() {
            $('.animate-on-scroll').addClass('opacity-0 translate-y-4');

            // Trigger scroll once to check initial state
            $(window).trigger('scroll');
        });

                // Simple background music - auto plays on load
        document.addEventListener('DOMContentLoaded', function() {
            const bgMusic = new Audio();
            // CORRECT PATH:
            bgMusic.src = '/audio/background.mp3'; // ← Ito ang tamang path

            bgMusic.loop = true;
            bgMusic.volume = 0.2; // 20% volume

            // Auto-play
            bgMusic.play().catch(error => {
                console.log("Auto-play prevented");

                // Play on first user interaction
                document.addEventListener('click', function playOnClick() {
                    bgMusic.play();
                    document.removeEventListener('click', playOnClick);
                });
            });
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
