@page
@model AMD.Pages.ServicesModel
@{
    ViewData["Title"] = "Services - AMD Audio & Lighting";
}

<div class="page-header">
    <div class="container">
        <h1 class="display-4">Our Event Services</h1>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">Event Sound Setup</h4>
                    <p class="card-text">Complete audio setup for weddings, parties, and concerts with professional mixing and setup.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">Lighting Design</h4>
                    <p class="card-text">Stage and ambient lighting tailored to your event with dynamic effects and mood creation.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">Technical Support</h4>
                    <p class="card-text">Professional sound engineers and technicians on-site throughout your event.</p>
                </div>
            </div>
        </div>
    </div>
