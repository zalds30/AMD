@{
    ViewData["Title"] = "About AMD Audio & Lighting";
}

@section Styles {
    <style>
        /* Hero Section - Natural gradient overlay */
        .about-hero {
            min-height: 65vh;
            background: linear-gradient(125deg, rgba(15, 23, 42, 0.95) 0%, rgba(15, 23, 42, 0.88) 100%), url('/images/about-bg.jpg') center/cover no-repeat;
            display: flex;
            align-items: center;
            color: white;
            padding: 120px 0 80px;
            position: relative;
        }

            .about-hero::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 100px;
                background: linear-gradient(to bottom, transparent, #f8fafc);
            }

        .hero-badge {
            background: linear-gradient(90deg, #2563eb, #7c3aed);
            color: white;
            padding: 8px 20px;
            border-radius: 30px;
            font-size: 0.9rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 25px;
            letter-spacing: 0.5px;
        }

        .hero-title {
            font-size: 3.2rem;
            font-weight: 800;
            line-height: 1.15;
            margin-bottom: 20px;
            color: white;
        }

        .hero-highlight {
            background: linear-gradient(90deg, #60a5fa, #a78bfa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 1.15rem;
            line-height: 1.7;
            color: #cbd5e1;
            max-width: 600px;
            margin-bottom: 30px;
            font-weight: 400;
        }

        /* Story Section - Realistic layout */
        .story-section {
            padding: 100px 0;
            background: #f8fafc;
            position: relative;
        }

        .story-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
        }

        .story-image-wrapper {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            transform: rotate(-1deg);
        }

        .story-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .story-image-wrapper:hover .story-image {
            transform: scale(1.05);
        }

        .story-image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 30px;
            background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
            color: white;
        }

        .story-content h2 {
            font-size: 2.4rem;
            color: #0f172a;
            margin-bottom: 25px;
            font-weight: 700;
        }

        .story-content p {
            font-size: 1.05rem;
            line-height: 1.8;
            color: #475569;
            margin-bottom: 20px;
        }

        .story-quote {
            border-left: 4px solid #2563eb;
            padding-left: 20px;
            margin: 30px 0;
            font-style: italic;
            color: #475569;
            font-size: 1.1rem;
        }

        /* Stats - Realistic layout */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            margin-top: 60px;
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 2.8rem;
            font-weight: 800;
            color: #2563eb;
            margin-bottom: 5px;
            line-height: 1;
        }

        .stat-label {
            color: #64748b;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }

        /* Values Section */
        .values-section {
            padding: 100px 0;
            background: white;
        }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-title {
            font-size: 2.5rem;
            color: #0f172a;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .section-subtitle {
            color: #64748b;
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .values-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .value-card {
            background: #f8fafc;
            padding: 40px 30px;
            border-radius: 12px;
            transition: all 0.3s ease;
            border: 1px solid #e2e8f0;
        }

            .value-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(37, 99, 235, 0.08);
                border-color: #2563eb;
            }

        .value-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 25px;
            font-size: 1.5rem;
            color: white;
        }

        .value-title {
            font-size: 1.3rem;
            color: #0f172a;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .value-description {
            color: #64748b;
            line-height: 1.7;
            font-size: 0.95rem;
        }

        /* Team Section */
        .team-section {
            padding: 100px 0;
            background: #f8fafc;
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .team-member {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
        }

            .team-member:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            }

        .team-photo {
            height: 250px;
            background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: #2563eb;
        }

        .team-info {
            padding: 25px;
        }

        .team-name {
            font-size: 1.2rem;
            color: #0f172a;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .team-position {
            color: #2563eb;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .team-bio {
            color: #64748b;
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .team-social {
            display: flex;
            gap: 10px;
        }

        .social-link {
            width: 36px;
            height: 36px;
            background: #f1f5f9;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #64748b;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.9rem;
        }

            .social-link:hover {
                background: #2563eb;
                color: white;
            }

        /* CTA Section - Simple and effective */
        .about-cta {
            padding: 80px 0;
            background: linear-gradient(135deg, #0f172a, #1e293b);
            color: white;
            text-align: center;
        }

        .cta-title {
            font-size: 2.2rem;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .cta-text {
            color: #cbd5e1;
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto 40px;
            line-height: 1.7;
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .story-container

        {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .hero-title {
            font-size: 2.5rem;
        }

        }

        @@media (max-width: 768px) {
            .about-hero

        {
            min-height: 50vh;
            padding: 100px 0 60px;
        }

        .hero-title {
            font-size: 2rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
            gap: 25px;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }

            .cta-buttons .btn {
                width: 100%;
                max-width: 300px;
            }

        }

        /* Animation classes */
        .fade-up {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }

            .fade-up.visible {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
}

