@page
@model AMD.Pages.BookingModel
@{
    ViewData["Title"] = "Book Your Event | AMD Audio & Lighting";
}

@section Styles {
    <style>
        /* Header Section */
        .booking-header {
            background: linear-gradient(rgba(15, 23, 42, 0.95), rgba(15, 23, 42, 0.92)), url('/images/booking-bg.jpg') center/cover no-repeat;
            color: white;
            padding: 120px 0 80px;
            position: relative;
            margin-bottom: 60px;
        }

            .booking-header::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 60px;
                background: linear-gradient(to bottom, transparent, #f8fafc);
            }

        .booking-title {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 15px;
            color: white;
        }

        .booking-subtitle {
            font-size: 1.1rem;
            color: #cbd5e1;
            max-width: 600px;
            line-height: 1.6;
            margin-bottom: 25px;
        }

        .contact-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-top: 30px;
        }

        .contact-badge {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            padding: 10px 20px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: white;
            font-size: 0.9rem;
            text-decoration: none;
            transition: all 0.2s ease;
        }

            .contact-badge:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
            }

        /* Booking Form Section */
        .booking-section {
            padding: 40px 0 80px;
        }

        .booking-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .form-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            border: 1px solid #e2e8f0;
        }

        .form-header {
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            color: white;
            padding: 30px;
        }

            .form-header h2 {
                font-size: 1.5rem;
                font-weight: 600;
                margin: 0;
            }

            .form-header p {
                opacity: 0.9;
                font-size: 0.95rem;
                margin-top: 5px;
            }

        .form-body {
            padding: 40px;
        }

        .form-step {
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 1px solid #e2e8f0;
        }

        .step-title {
            font-size: 1.2rem;
            color: #0f172a;
            margin-bottom: 20px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .step-number {
            width: 30px;
            height: 30px;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.9rem;
            font-weight: 600;
        }

        /* Form Elements */
        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #475569;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .form-control-custom {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            font-size: 0.95rem;
            color: #0f172a;
            transition: all 0.2s ease;
            background: white;
        }

            .form-control-custom:focus {
                outline: none;
                border-color: #2563eb;
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

            .form-control-custom::placeholder {
                color: #94a3b8;
            }

        .form-select {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            font-size: 0.95rem;
            color: #0f172a;
            background: white;
            cursor: pointer;
        }

            .form-select:focus {
                outline: none;
                border-color: #2563eb;
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        textarea.form-control-custom {
            min-height: 120px;
            resize: vertical;
        }

        /* Event Type Selection */
        .event-type-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .event-type-card {
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.2s ease;
            text-align: center;
            background: white;
        }

            .event-type-card:hover {
                border-color: #2563eb;
                transform: translateY(-2px);
            }

            .event-type-card.selected {
                border-color: #2563eb;
                background: #f0f7ff;
            }

        .event-type-icon {
            font-size: 1.8rem;
            color: #2563eb;
            margin-bottom: 10px;
        }

        .event-type-name {
            font-weight: 600;
            color: #0f172a;
            margin-bottom: 5px;
        }

        .event-type-desc {
            font-size: 0.85rem;
            color: #64748b;
        }

        /* Equipment Selection */
        .equipment-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }

        .equipment-item {
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 15px;
            display: flex;
            align-items: center;
            gap: 15px;
            background: white;
            transition: all 0.2s ease;
        }

            .equipment-item:hover {
                border-color: #2563eb;
                background: #f8fafc;
            }

        .equipment-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #2563eb;
        }

        .equipment-info {
            flex: 1;
        }

            .equipment-info h4 {
                margin: 0 0 5px 0;
                font-size: 1rem;
                color: #0f172a;
                font-weight: 600;
            }

        .equipment-desc {
            font-size: 0.85rem;
            color: #64748b;
            margin: 0;
        }

        .equipment-checkbox {
            width: 22px;
            height: 22px;
            border: 2px solid #cbd5e1;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
            flex-shrink: 0;
        }

            .equipment-checkbox.checked {
                background: #2563eb;
                border-color: #2563eb;
            }

                .equipment-checkbox.checked::after {
                    content: '✓';
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    color: white;
                    font-size: 0.8rem;
                    font-weight: bold;
                }

        /* Equipment Categories */
        .equipment-category {
            margin-bottom: 25px;
        }

        .category-title {
            font-size: 1.1rem;
            color: #0f172a;
            margin-bottom: 15px;
            font-weight: 600;
            padding-bottom: 8px;
            border-bottom: 2px solid #e2e8f0;
        }

        /* Submit Button */
        .submit-btn {
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            color: white;
            border: none;
            padding: 16px 40px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: block;
            width: 100%;
            max-width: 300px;
            margin: 40px auto 0;
        }

            .submit-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(37, 99, 235, 0.2);
            }

        /* Contact Sidebar */
        .contact-sidebar {
            background: #f8fafc;
            border-radius: 16px;
            padding: 30px;
            border: 1px solid #e2e8f0;
            margin-bottom: 30px;
        }

        .sidebar-title {
            font-size: 1.2rem;
            color: #0f172a;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .contact-item {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            margin-bottom: 20px;
        }

        .contact-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1rem;
        }

        .contact-details h4 {
            margin: 0 0 5px 0;
            font-size: 0.95rem;
            color: #475569;
            font-weight: 500;
        }

        .contact-details p {
            margin: 0;
            color: #0f172a;
            font-weight: 600;
            font-size: 1rem;
        }

        /* Process Steps */
        .process-steps {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin: 40px 0;
        }

        .process-step {
            flex: 1;
            min-width: 150px;
            text-align: center;
        }

        .step-circle {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            margin: 0 auto 15px;
        }

        .step-text {
            font-size: 0.9rem;
            color: #475569;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .booking-title

        {
            font-size: 2.2rem;
        }

        .form-body {
            padding: 25px;
        }

        .event-type-grid {
            grid-template-columns: 1fr;
        }

        .equipment-grid {
            grid-template-columns: 1fr;
        }

        .process-steps {
            flex-direction: column;
            gap: 25px;
        }

        }
    </style>
}

<!-- Header Section -->
<section class="booking-header">
    <div class="container">
