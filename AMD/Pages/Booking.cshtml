</section>

<!-- Main Content -->
<section class="booking-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="booking-container">
                    <div class="form-card">
                        <div class="form-header">
                            <h2>Event Inquiry Form</h2>
                            <p>Fill out the details below and we'll contact you to confirm your booking</p>
                        </div>

                        <form method="post" class="form-body">
                            <!-- Step 1: Event Details -->
                            <div class="form-step">
                                <h3 class="step-title">
                                    <span class="step-number">1</span>
                                    Event Information
                                </h3>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Your Full Name *</label>
                                            <input type="text" class="form-control-custom" placeholder="Enter your full name" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Contact Number *</label>
                                            <input type="tel" class="form-control-custom" placeholder="e.g. 0917 123 4567" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Email Address *</label>
                                    <input type="email" class="form-control-custom" placeholder="your.email@example.com" required>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Event Date *</label>
                                            <input type="date" class="form-control-custom" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Event Duration</label>
                                            <select class="form-select">
                                                <option value="">Select duration</option>
                                                <option value="4">4 hours</option>
                                                <option value="6">6 hours</option>
                                                <option value="8">8 hours</option>
                                                <option value="full">Full day</option>
                                                <option value="multi">Multiple days</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 2: Event Type -->
                            <div class="form-step">
                                <h3 class="step-title">
                                    <span class="step-number">2</span>
                                    Type of Event
                                </h3>

                                <div class="event-type-grid">
                                    <div class="event-type-card">
                                        <div class="event-type-icon">
                                            <i class="fas fa-ring"></i>
                                        </div>
                                        <div class="event-type-name">Wedding</div>
                                        <div class="event-type-desc">Ceremony & Reception</div>
                                    </div>

                                    <div class="event-type-card">
                                        <div class="event-type-icon">
                                            <i class="fas fa-building"></i>
                                        </div>
                                        <div class="event-type-name">Corporate</div>
                                        <div class="event-type-desc">Meetings & Conferences</div>
                                    </div>

                                    <div class="event-type-card">
                                        <div class="event-type-icon">
                                            <i class="fas fa-music"></i>
                                        </div>
                                        <div class="event-type-name">Concert</div>
                                        <div class="event-type-desc">Live Performances</div>
                                    </div>

                                    <div class="event-type-card">
                                        <div class="event-type-icon">
                                            <i class="fas fa-birthday-cake"></i>
                                        </div>
                                        <div class="event-type-name">Private Party</div>
                                        <div class="event-type-desc">Birthdays & Celebrations</div>
                                    </div>

                                    <div class="event-type-card">
                                        <div class="event-type-icon">
                                            <i class="fas fa-graduation-cap"></i>
                                        </div>
                                        <div class="event-type-name">School Event</div>
                                        <div class="event-type-desc">Graduations & Programs</div>
                                    </div>

                                    <div class="event-type-card">
                                        <div class="event-type-icon">
                                            <i class="fas fa-church"></i>
                                        </div>
                                        <div class="event-type-name">Religious Event</div>
                                        <div class="event-type-desc">Church Programs</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 3: Venue Details -->
                            <div class="form-step">
                                <h3 class="step-title">
                                    <span class="step-number">3</span>
                                    Venue Information
                                </h3>

                                <div class="form-group">
                                    <label class="form-label">Venue Name</label>
                                    <input type="text" class="form-control-custom" placeholder="e.g. Garden Oasis Resort">
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Venue Address</label>
                                            <input type="text" class="form-control-custom" placeholder="Street, Barangay, City">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Approximate Guests</label>
                                            <select class="form-select">
                                                <option value="">Select number of guests</option>
                                                <option value="50">Less than 50</option>
                                                <option value="100">50-100 guests</option>
                                                <option value="200">100-200 guests</option>
                                                <option value="300">200-300 guests</option>
                                                <option value="500">300-500 guests</option>
                                                <option value="500+">500+ guests</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 4: Equipment Needs -->
                            <div class="form-step">
                                <h3 class="step-title">
                                    <span class="step-number">4</span>
                                    Equipment Requirements
                                </h3>

                                <div class="form-group">
                                    <p class="form-label">Select the equipment you need (click to select):</p>
                                </div>

                                <!-- Sound Systems -->
                                <div class="equipment-category">
                                    <h4 class="category-title">Sound Systems</h4>
                                    <div class="equipment-grid">
                                        <div class="equipment-item">
                                            <div class="equipment-icon">
                                                <i class="fas fa-volume-up"></i>
                                            </div>
                                            <div class="equipment-info">
