                                            <div class="equipment-checkbox"></div>
                                        </div>

                                        <div class="equipment-item">
                                            <div class="equipment-icon">
                                                <i class="fas fa-microphone-alt"></i>
                                            </div>
                                            <div class="equipment-info">
                                                <h4>Wireless Microphones</h4>
                                                <p class="equipment-desc">Handheld and lapel wireless mics</p>
                                            </div>
                                            <div class="equipment-checkbox"></div>
                                        </div>

                                        <div class="equipment-item">
                                            <div class="equipment-icon">
                                                <i class="fas fa-plug"></i>
                                            </div>
                                            <div class="equipment-info">
                                                <h4>Generator</h4>
                                                <p class="equipment-desc">Power backup for venues without electricity</p>
                                            </div>
                                            <div class="equipment-checkbox"></div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Services -->
                                <div class="equipment-category">
                                    <h4 class="category-title">Additional Services</h4>
                                    <div class="equipment-grid">
                                        <div class="equipment-item">
                                            <div class="equipment-icon">
                                                <i class="fas fa-user-tie"></i>
                                            </div>
                                            <div class="equipment-info">
                                                <h4>Sound Engineer</h4>
                                                <p class="equipment-desc">Professional audio technician on-site</p>
